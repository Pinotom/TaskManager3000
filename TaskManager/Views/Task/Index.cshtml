@model TaskManager.ViewModels.IndexViewModel
@{
    ViewBag.Title = "Log in";
}



    <div class="row">
        <div class="col-sm-4">
            <h2>Who are you?</h2>
            @using (Html.BeginForm("LogIn", "Task"))
            {
                <div class="form-group">
                    @Html.DropDownListFor(m => m.User.Id, new SelectList(Model.Users, "Id", "Name"), "New user...", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" id="btnConfirm">Confirm</button>
                </div>
            }

            <div id="newUserForm">
                    @using (Html.BeginForm("NewUser", "Task"))
                    {
                        <div class="form-group">
                            <label>Name:</label>
                            @Html.TextBoxFor(m => m.User.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.User.Name)
                        </div>

                        <button type="submit" class="btn btn-primary">Create user</button>
                    }
             </div>

            


        </div>

        
    </div>


